@model KK_BookStore.TheLoai

@{
    ViewBag.Title = "EditTheLoai";
    Layout = "~/Views/Shared/Admin.cshtml";
}



<div class="row justify-content-center">
    <div class="row">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header"><h3 class="text-left font-weight-light my-2">Edit Category</h3></div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaTL)

                        <div class="form-group">
                            <label style="font-size:large" class="control-label col-md-2">Name of category</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenTL, new { htmlAttributes = new { @class = "form-control", @style = "width:500px" } })
                                @Html.ValidationMessageFor(model => model.TenTL, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input style="background-color:chartreuse" type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
