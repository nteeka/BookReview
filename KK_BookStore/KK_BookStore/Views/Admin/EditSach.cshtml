@model KK_BookStore.Sach

@{
    ViewBag.Title = "EditSach";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="row justify-content-center">
    <div class="row">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header"><h3 class="text-left font-weight-light my-2">Edit</h3></div>
            <div class="card-body">
                @using (Html.BeginForm("EditSach", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaSach)



                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label class="control-label" for="TenSach"><strong>Tên sách</strong></label>
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.TenSach, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="control-label" for="TenSach"><strong>Thể loại</strong></label>
                        <div style="margin-left:110px" class="col-md-5">
                            @Html.DropDownListFor(m => m.MaTL, new SelectList(ViewBag.theloai, "Value", "Text", new { @class = "form-control" }))
                        </div>
                    </div>
                    <p></p>
                    <div class="form-group">
                        <div class="row">
                            <div class=" col-md-1">
                                <label class="control-label" for="TenTacGia"><strong>Tên tác giả</strong></label>
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.TenTacGia, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TenTacGia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label class="control-label" for="NhaXuatBan"><strong>Nhà xuất bản</strong></label>
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.NhaXuatBan, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NhaXuatBan, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label class="control-label" for="NamXuatBan"><strong>Năm xuất bản</strong></label>
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.NamXuatBan, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NamXuatBan, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label class="control-label " for="DonGia"><strong>Giá bán</strong></label>
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.DonGia, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div style="margin-left:105px" class="form-group">
                        <label class="control-label col-md-2" for="HinhAnh"><strong>Bìa sách</strong></label>
                        <div class="col-md-5">
                            @*@Html.TextBoxFor(model => model.HinhAnh, new { @class = "form-control" })*@
                            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                            <input type="file" name="file" required="required" id="file" accept="image/*" />
                        </div>
                    </div>
                    
                    <p></p>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label class="control-label" for="MoTa"><strong>Mô tả</strong></label>
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.MoTa, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label class="control-label" for="SoLuongSach"><strong>Số lượng tồn</strong></label>
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.SoLuongSach, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SoLuongSach, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    @*<div  style="margin-left:180px" class="form-group">
                @Html.LabelFor(model => model.SoLike, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLike, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLike, "", new { @class = "text-danger" })
                </div>
            </div>*@

                    <div style="margin-left:180px" class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>