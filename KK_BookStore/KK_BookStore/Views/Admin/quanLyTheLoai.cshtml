                        <a style="float:right" data-tip="Thêm" href="@Url.Action("themTheLoai", "Admin")"><i class="fa fa-hammer"></i></a>
                    </div>
                    <div class="card-body">
                        <table id="datatablesSimple">
                            <thead>
                                <tr>
                                    <th>Mã thể loại</th>
                                    <th>Tên thể loại</th>                                
                                    <th></th>

                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Mã thể loại</th>
                                    <th>Tên thể loại</th>
                                    <th></th>

                                </tr>
                            </tfoot>
