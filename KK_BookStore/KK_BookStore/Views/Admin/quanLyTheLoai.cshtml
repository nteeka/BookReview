                                    <tr>
                                        <td>@item.MaTL</td>
                                        <td>@item.TenTL</td>
                                        
                                        <td>
                                            <a class="edit" href="@Url.Action("EditTheLoai", "Admin",new { @id = item.MaTL})" title="Edit" data-toggle="tooltip"><i class="fa fa-pen"></i></a>
                                            <a class="delete" href="@Url.Action("xoaTheLoai", "Admin",new { @id = item.MaTL})" title="Delete" data-toggle="tooltip"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
