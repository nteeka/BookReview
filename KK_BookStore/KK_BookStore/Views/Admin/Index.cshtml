<div class="row mt-4">
    <div class="col-lg-7 mb-lg-0 mb-4">
        <div class="card ">
            <div class="card-header pb-0 p-3">
                <div class="d-flex justify-content-between">
                    <h6 class="mb-2">Top View</h6>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center ">
                    <tbody>
                        
                        @foreach (var item in ViewBag.mostViewPosts)
                        {
                            <tr>
                                <td class="w-30">
                                    <div class="d-flex px-2 py-1 align-items-center">
                                        <div>
                                            <img src="@item.AnhBia" style="width:100px;height:100px" alt="Country flag">
                                        </div>
                                        <div class="ms-4">
                                            <p class="text-xs font-weight-bold mb-0">Name:</p>
                                            @if(item.TenBaiViet.Length > 15)
                                            {
                                                <h6 class="text-sm mb-0">@item.TenBaiViet.Substring(0, 15)...</h6>

                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-center">
                                        <p class="text-xs font-weight-bold mb-0">View:</p>
                                        <h6 class="text-sm mb-0">@item.LuotXem <i class="fa fa-eye"></i></h6>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-center">
                                        <p class="text-xs font-weight-bold mb-0">Author:</p>
                                        <h6 class="text-sm mb-0">@item.TaiKhoan</h6>
                                    </div>
                                </td>
                                <td class="align-middle text-sm">
                                    <div class="col text-center">
                                        <p class="text-xs font-weight-bold mb-0">Ratting:</p>
                                        <h6 class="text-sm mb-0">@Math.Round(item.SoSao,1)<i class="fa fa-star"></i> / @item.SoLuotDanhGia rates</h6>
                                    </div>
                                </td>
                            </tr>
                            
                            ViewBag.countMostViewPosts++;
                            if(ViewBag.countMostViewPosts ==4)
                            {
                                break;
                            }
                        }

                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card">
            <div class="card-header pb-0 p-3">
                <h6 style="float:left" class="mb-0">Categories</h6><a style="float:right" href="@Url.Action("themTheLoai", "Admin")">Create</a>
            </div>
            <div class="card-body p-3">
                <ul class="list-group">
                    @foreach (var categoryCount in ViewBag.CategoryCounts)
                    {
                        <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                            <div class="d-flex align-items-center">
                                <div class="icon icon-shape icon-sm me-3 bg-gradient-dark shadow text-center">
                                    <i class="ni ni-mobile-button text-white opacity-10"></i>
                                </div>
                                <div class="d-flex flex-column">
                                    <h6 class="mb-1 text-dark text-sm">@categoryCount.Key</h6>
                                    <span class="text-xs">@categoryCount.Value posts <span class="font-weight-bold"></span></span>
                                </div>
                            </div>
                            <div class="d-flex">
                                @foreach (var item in ViewBag.theloai)
                                {
                                    if (item.TenTL == categoryCount.Key)
                                    {
                                        <button onclick="window.location.href='@Url.Action("danhSachBaiVietTheoTheLoai", "Admin", new {@id = item.MaTL})'" class="btn btn-link btn-icon-only btn-rounded btn-sm text-dark icon-move-right my-auto"><i class="ni ni-bold-right" aria-hidden="true"></i></button>
                                        break;
                                    }
                                }
                            </div>
                        </li>
                    }


                </ul>
            </div>
        </div>
    </div>
</div>

