@model KK_BookStore.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send";
}

<div style="text-align: center; margin-top: 100px;background-color:rebeccapurple">
    @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("rememberMe", @Model.RememberMe)
        <h1 style="color: aquamarine">Send verification code</h1>
        <hr />
        <div class="row" style="color: black">
            <div class="col-md-8" style="font-size:x-large;margin-left:150px">
                Select Two-Factor Authentication Provider:
                @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                <input type="submit" value="Submit" class="btn btn-default" style="width:100px;background-color:blue;font-size:large" />
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


