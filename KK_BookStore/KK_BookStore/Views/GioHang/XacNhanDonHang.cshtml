@model IEnumerable<KK_BookStore.Models.GioHang>
@{
    ViewBag.Title = "XacNhanDonHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <address>
                        <strong>K&K BookStore</strong>
                        <br>
                        HUTECH Thu Duc Campus
                        <br>
                        Ho Chi Minh, VN 2023    
                        <br>
                        <abbr title="Phone">P:</abbr> (213) 484-6829
                    </address>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                    <p>
                        <em>@DateTime.Now.ToString("dd/MM/yyyy")</em>
                    </p>
                    @*<p>
                        <em>Hóa đơn #: 34522677W</em>
                    </p>*@
                </div>
            </div>
            <div class="row">
                <div class="text-center">
                    <h1 style="margin-left:200px">HÓA ĐƠN</h1>
                </div>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th class="text-center">Giá</th>
                            <th class="text-center">Tổng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="col-md-9"><em>@item.tenSach</em></td>
                                <td class="col-md-1" style="text-align: center">@item.soLuong </td>
                                <td class="col-md-1 text-center"> @String.Format("{0:0,0}", item.giaBan)</td>
                                <td class="col-md-1 text-center">@String.Format("{0:0,0}", item.thanhTien)</td>
                            </tr>

                            <tr>
                                <td>   </td>
                                <td>   </td>
                                <td class="text-right">
                                    @*<p>
                                <strong>Tổng: </strong>
                            </p>*@
                                    <p>
                                        <strong>Thuế: </strong>
                                    </p>
                                </td>
                                <td class="text-center">
                                    @*<p>
                                <strong>$6.94</strong>
                            </p>*@
                                    <p>
                                        <strong>$0</strong>
                                    </p>
                                </td>
                            </tr>
                        }

                        <tr>
                            <td>   </td>
                            <td>   </td>
                            @*<td style="margin-right:20px" class="text-right"><h4><strong>Tổng cộng: </strong></h4></td>*@
                            <td><h4><strong>Tổng cộng: </strong></h4></td>

                            <td class="text-center text-danger"><h4><strong>@String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</strong></h4></td>
                        </tr>
                    </tbody>
                </table>
                @*<button type="button" class="btn btn-success btn-lg btn-block">
            Thanh toán   <span class="glyphicon glyphicon-chevron-right"></span>
        </button>*@
                @if (ViewBag.KiemTra == 1)
                {
                    <a style="width:50%" data-tip="Thanh toán Paypal" class="like btn btn-default" href="/GioHang/PaymentWithPayPal">Thanh toán Paypal</a>
                    <a style="width: 50%" data-tip="Thanh toán khi nhận hàng" class="like btn btn-default" href="@Url.Action("lapHoaDon", "GioHang")">Thanh toán khi nhận hàng</a>
                }
                else
            {
            <p>
                Quý khách chưa cung cấp thông tin địa chỉ và số điện thoại, vui lòng nhấn vào <a class="like btn btn-default" href="@Url.Action("Edit", "Manage",new { @id = User.Identity.Name})"><span class="fa fa-user"></span></a> để cập nhập thông tin.
            </p>
            }
            </div>
        </div>
    </div>
</div>
<style>
    body {
        margin-top: 20px;
    }
</style>

