                        <script>
                            function initMap() {
                                var defaultLocation = { lat: 10.7769, lng: 106.7009 }; // Set your default location here

                                var map = new google.maps.Map(document.getElementById('map'), {
                                    center: defaultLocation,
                                    zoom: 15
                                });

                                var marker = new google.maps.Marker({
                                    map: map,
                                    draggable: true,
                                    animation: google.maps.Animation.DROP,
                                    position: defaultLocation
                                });

                                // Update the input field with the default location
                                document.getElementById('selectedLocation').value =
                                    'Latitude: ' + defaultLocation.lat + ', Longitude: ' + defaultLocation.lng;

                                google.maps.event.addListener(marker, 'dragend', function (event) {
                                    // Update the input field with the selected location
                                    var selectedLocation = {
                                        lat: event.latLng.lat(),
                                        lng: event.latLng.lng()
                                    };

                                    document.getElementById('selectedLocation').value =
                                        'Latitude: ' + selectedLocation.lat + ', Longitude: ' + selectedLocation.lng;
                                });
                            }
                        </script>

                        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAmTQbggH8u496pxuDOSakUuvsXAFM3Kf0&callback=initMap"></script>

